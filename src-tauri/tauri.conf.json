{
  "$schema": "https://raw.githubusercontent.com/nicegui-org/nicegui/main/examples/tray_icon/src-tauri/tauri.conf.json",
  "productName": "Hytale Server Manager",
  "version": "2.0.0",
  "identifier": "com.hytalelife.server-manager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Hytale Server Manager",
        "width": 950,
        "height": 620,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/server-manager-backend"
    ]
  },
  "plugins": {
    "shell": {
      "sidecar": true,
      "scope": [
        {
          "name": "binaries/server-manager-backend",
          "sidecar": true,
          "args": true
        }
      ]
    }
  }
}
