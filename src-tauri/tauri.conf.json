{
  "$schema": "https://raw.githubusercontent.com/nicegui-org/nicegui/main/examples/tray_icon/src-tauri/tauri.conf.json",
  "productName": "Hytale Server Manager",
  "version": "2.6.1",
  "identifier": "com.hytalelife.server-manager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Hytale Server Manager",
        "width": 950,
        "height": 620,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "center": true,
        "visible": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset: https://asset.localhost",
        "connect-src": "ipc: http://ipc.localhost http://127.0.0.1 http://localhost https://api.ipify.org",
        "font-src": "'self' https://fonts.gstatic.com",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com",
        "img-src": "'self' asset: https://asset.localhost data: blob:"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "server-manager-backend"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}